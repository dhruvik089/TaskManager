
@if (TempData["SuccessLogin"] != null)
{
    <script>
            toastr.success('@TempData["SuccessLogin"]');
    </script>
}
<!--*******************
    Preloader start
********************-->
<div id="preloader">
    <div class="loader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
        </svg>
    </div>
</div>
<!--*******************
    Preloader end
********************-->
<!--**********************************
    Main wrapper start
***********************************-->
<div id="main-wrapper">

    <!--**********************************
        Nav header start
    ***********************************-->
    <div class="nav-header">
        <div class="brand-logo">
            <a href="index.html">
                <b class="logo-abbr"><img src="images/logo.png" alt=""> </b>
                <div class="brand-title" />
                <img src="~/Content/Theme/TeacherDashBoard/images/logo-text.png" />
        </div>
        </a>
    </div>
</div>
<!--**********************************
    Nav header end
***********************************-->
<!--**********************************
    Header start
***********************************-->
<div class="header">
    <div class="header-content clearfix">

        <div class="nav-control">
            <div class="hamburger">
                <span class="toggle-icon"><i class="icon-menu"></i></span>
            </div>
        </div>
       
        <div class="header-right">

            <div class="d-flex">
                <h4 class="mt-3">
                    @Session["username"]
                </h4>
                <button class="btn">

                    @Html.ActionLink("Log Out", "Login", controllerName: "LoginSignup")
                </button>
            </div>

        </div>
    </div>
</div>
<!--**********************************
    Header end ti-comment-alt
***********************************-->
<!--**********************************
    Sidebar start
***********************************-->
<div class="nk-sidebar">
    <div class="nk-nav-scroll">
        <ul class="metismenu" id="menu">
            <li class="nav-label">Dashboard</li>
            <li>
                <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                    <i class="icon-speedometer menu-icon"></i><span class="nav-text">Task</span>
                </a>
                <ul aria-expanded="false">
                    <li>@Html.ActionLink("Show Task", "ShowTask")</li>
                    <!-- <li><a href="./index-2.html">Home 2</a></li> -->
                </ul>
            </li>
        </ul>
    </div>
</div>
<!--**********************************
    Sidebar end
***********************************-->
<!--**********************************
    Content body start
***********************************-->
<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-1">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Task", "ShowTask", "Student", htmlAttributes: new { @class = "text-white" })</h3>

                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.TotalTask</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-2">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Complete Task", "ShowTotalComplete", "Student", htmlAttributes: new { @class = "text-white" })</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.TotalCompeteTask</h2>

                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-3">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Pendding Task", "ShowPending", "Student", htmlAttributes: new { @class = "text-white" })</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.TotalPendingTask</h2>

                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-2">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Expired Task", "ShowExpired", "Student", htmlAttributes: new { @class = "text-white" })</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.TotalExpiredTask</h2>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
<!--**********************************
    Footer start
***********************************-->
<div class="footer">
    <div class="copyright">
        <p>Copyright &copy; Designed & Developed by <a href="https://growth.in">Task Management</a> 2022</p>
    </div>
</div>
<!--**********************************
    Footer end
***********************************-->
</div>

<script src="~/Content/Theme/TeacherDashBoard/plugins/common/common.min.js"></script>
<script src="~/Content/Theme/TeacherDashBoard/js/custom.min.js"></script>
<script src="~/Content/Theme/TeacherDashBoard/js/settings.js"></script>
<script src="~/Content/Theme/TeacherDashBoard/js/gleek.js"></script>
<script src="~/Content/Theme/TeacherDashBoard/js/styleSwitcher.js"></script>

<script src="~/Content/Theme/StudentDashBoard/js/dashboard/dashboard-1.js"></script>