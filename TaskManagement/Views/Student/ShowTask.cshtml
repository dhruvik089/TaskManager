@model IEnumerable<TaskManagement.Models.ViewModel.AssignmentModel>

<div class="container">


    <h2 class="text-center">TaskView</h2>
    <input />
    <p>
        @Html.ActionLink("Home Page", "Student", "Student")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskID)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.TaskName)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.Description)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks.Deadline)
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tasks.TaskName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tasks.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tasks.Deadline)
                </td>

                <td>
                    @if (item.Task_complete == false)
                    {
                        <div><a class="text-danger" href="~/Student/SetAssignmentStatus?id=@item.AssignmentID">Please Submit</a></div> }
                    else
                    {
                        <div>Already Completed</div>}
                </td>
            </tr>
        }

    </table>

</div>