@model List<TaskManagement.Models.ViewModel.TaskList>

<div class="container">

    <div class="row">
        <h3 class="text-center col-10">All Create Task </h3>
        <button class="col-2 btn btn-primary">@Html.ActionLink("Add task", "CreateTask","Teacher",htmlAttributes:new { @class="text-decoration-none text-white"})</button>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>TaskID</th>
                <th>Task Name</th>
                <th>Description</th>
                <th>Deadline</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TaskID</td>
                    <td>@item.TaskName</td>
                    <td>@item.Description</td>
                    <td>@item.Deadline</td>
                    <td>
                        <button class="btn btn-info">Edit</button>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-primary">
        @Html.ActionLink("back to Home", "Teacher", "Teacher", htmlAttributes: new { @class = "text-decoration-none text-white" })
    </button>

</div>