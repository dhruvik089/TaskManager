@model List<TaskManagement.Models.ViewModel.TaskList>

@if (TempData["deleteTask"] != null)
{
    <script>
        toastr.success('@TempData["deleteTask"]');
    </script>
}
@if (TempData["notdeleteTask"] != null)
{
    <script>
        toastr.error('@TempData["notdeleteTask"]');
    </script>
}

<!--*******************
    Preloader start
********************-->
<div id="preloader">
    <div class="loader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
        </svg>
    </div>
</div>
<!--*******************
    Preloader end
********************-->
<!--**********************************
    Main wrapper start
***********************************-->
<div id="main-wrapper">

    <!--**********************************
        Nav header start
    ***********************************-->
    <div class="nav-header">
        <div class="brand-logo">
            <a href="index.html">
                <b class="logo-abbr"><img src="images/logo.png" alt=""> </b>
                <div class="brand-title" />
                <img src="~/Content/Theme/TeacherDashBoard/images/logo-text.png" />
        </div>
        </a>
    </div>
</div>
<!--**********************************
    Nav header end
***********************************-->
<!--**********************************
    Header start
***********************************-->
<div class="header">
    <div class="header-content clearfix">

        <div class="nav-control">
            <div class="hamburger">
                <span class="toggle-icon"><i class="icon-menu"></i></span>
            </div>
        </div>

        <div class="header-right">

            <div class="d-flex">
                <h4 class="mt-3">
                    @Session["Teachername"]

                </h4>
                <button class="btn">

                    @Html.ActionLink("Log Out", "Login", controllerName: "LoginSignup")
                </button>
            </div>

        </div>
    </div>
</div>
<!--**********************************
    Header end ti-comment-alt
***********************************-->
<!--**********************************
    Sidebar start
***********************************-->
<div class="nk-sidebar">
    <div class="nk-nav-scroll">
        <ul class="metismenu" id="menu">
            <li class="nav-label">Dashboard</li>
            <li>
                <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                    <i class="icon-speedometer menu-icon"></i><span class="nav-text">Task</span>
                </a>
                <ul aria-expanded="false">
                    <li>@Html.ActionLink("Create Task", "CreateTask")</li>
                    <li>@Html.ActionLink("Assign Task", "AsignTask")</li>
                    <!-- <li><a href="./index-2.html">Home 2</a></li> -->
                </ul>
            </li>
        </ul>
    </div>
</div>
<!--**********************************
    Sidebar end
***********************************-->

<div class="content-body">
    <div class="container">
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body" id="popupContent">

                    </div>
                    @*<div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
                </div>
            </div>
        </div>
        <div class="row">
            <h3 class="text-center col-10">All Create Task </h3>
            @*<button class="col-2 btn btn-primary">*@
            @Html.ActionLink("Add task", "CreateTask", "Teacher", htmlAttributes: new { @class = "col-2 btn btn-primary text-decoration-none text-white" })
            @*</button>*@
        </div>


        <table class="table">
            <thead>
                <tr>
                    <th>TaskID</th>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Deadline</th>
                    <th>AssignTask</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TaskID</td>
                        <td>@item.TaskName</td>
                        <td>@item.Description</td>
                        <td>@item.Deadline</td>
                        <td>
                            @*@Html.ActionLink("Assign Task", "AsignTask", "Teacher", new { id = @item.TaskID, data-toggle = "modal", data-target = "#myModal", @class = "text-decoration-none text-white btn btn-danger" }, null)*@
                            <button id="@item.TaskID" class="assignTask btn btn-info" value="@item.TaskID">
                                Assign Task
                            </button>
                        </td>
                        <td>
                            @*<button class="btn btn-info">Edit</button>*@
                            @*<button class="btn btn-danger">*@
                            @Html.ActionLink("Delete", "DeleteTask", "Teacher", new { id = @item.TaskID, @class = "text-decoration-none text-white btn btn-danger" }, null)
                            @*</button>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @*<button class="btn btn-primary">*@
        @Html.ActionLink("back to Home", "Teacher", "Teacher", htmlAttributes: new { @class = "btn btn-primary text-decoration-none text-white" })
        @*</button>*@
    </div>


</div>

<!--**********************************
      Footer start
  ***********************************-->
<div class="footer">
    <div class="copyright">
        <p>Copyright &copy; Designed & Developed by <a href="https://themeforest.net/user/quixlab">Quixlab</a> 2018</p>
    </div>
</div>
<!--**********************************
    Footer end
***********************************-->

<script>
    $(document).ready(function () {
        $('.assignTask').on('click', function () {
            var Valueescheck = $(this).val();
            $.ajax({
                url: '/Teacher/AssignTasks?id=' + Valueescheck,
                type: 'GET',
                success: function (data) {
                    console.log(data);
                    $('#popupContent').empty();
                    $('#exampleModalCenter').modal("show");
                    $('#popupContent').append(data);
                }
            })
            
        })
        
    })
</script>