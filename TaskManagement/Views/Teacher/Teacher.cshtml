@if (TempData["SuccessLogin"] != null)
{
    <script>
        toastr.success('@TempData["SuccessLogin"]');
        @*@TempData["SuccessLogin"]=null;*@
  ;  </script>
}

<!--*******************
    Preloader start
********************-->
<div id="preloader">
    <div class="loader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
        </svg>
    </div>
</div>
<!--*******************
    Preloader end
********************-->
<!--**********************************
    Main wrapper start
***********************************-->
<div id="main-wrapper">

    <!--**********************************
        Nav header start
    ***********************************-->
    <div class="nav-header">
        <div class="brand-logo">
            <a href="index.html">
                
                <div class="brand-title" />
                <img src="~/Content/Theme/TeacherDashBoard/images/logo-text.png" />
                @*<h3 class="text-white text-center">Task Management</h3>*@
        </div>
        </a>
    </div>
</div>
<!--**********************************
    Nav header end
***********************************-->
<!--**********************************
    Header start
***********************************-->
<div class="header">
    <div class="header-content clearfix">

        <div class="nav-control">
            <div class="hamburger">
                <span class="toggle-icon"><i class="icon-menu"></i></span>
            </div>
        </div>

        <div class="header-right">

            <div class="d-flex">
                <h4 class="mt-3">
                    @Session["Teachername"]

                </h4>
                <button class="btn">

                    @Html.ActionLink("Log Out", "Login", controllerName: "LoginSignup")
                </button>
            </div>

        </div>
    </div>
</div>
<!--**********************************
    Header end ti-comment-alt
***********************************-->
<!--**********************************
    Sidebar start
***********************************-->
<div class="nk-sidebar">
    <div class="nk-nav-scroll">
        <ul class="metismenu" id="menu">
            <li class="nav-label">Dashboard</li>
            <li>
                <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                    <i class="icon-speedometer menu-icon"></i><span class="nav-text">Task</span>
                </a>
                <ul aria-expanded="false">
                    <li>@Html.ActionLink("Create Task", "CreateTask")</li>
                    @*<li>@Html.ActionLink("Assign Task", "AssignTask")</li>*@
                </ul>
            </li>
        </ul>
    </div>
</div>
<!--**********************************
    Sidebar end
***********************************-->
<!--**********************************
    Content body start
***********************************-->
<div class="content-body">
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-1 gradient-1-shadow">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Create Task", "TotalCreateTask", "Teacher", htmlAttributes: new { @class = "text-decoration-none text-white" })</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"> @ViewBag.TotalTask </h2>

                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-2 gradient-2-shadow">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Complete Task", "TotalCompleteTask", "Teacher", htmlAttributes: new { @class = "text-decoration-none text-white" })</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">  @ViewBag.CompleteTask</h2>

                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-8 gradient-8-shadow ">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Pending Task", "TotalPendingTask", "Teacher", htmlAttributes: new { @class = "text-decoration-none text-white" })</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"> @ViewBag.PendingTask</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-4 gradient-4-shadow">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Assign Task", "TotalAssignTask", "Teacher", htmlAttributes: new { @class = "text-decoration-none text-white" })</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"> @ViewBag.TotalAssignTask</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-6 gradient-6-shadow">
                    <div class="card-body">
                        <h3 class="card-title text-white">@Html.ActionLink("Total Expired Task", "TotalExpiredTask", "Teacher", htmlAttributes: new { @class = "text-decoration-none text-white" })</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white"> @ViewBag.TotalExpiredTask</h2>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
<!--**********************************
    Footer start
***********************************-->
<div class="footer">
    <div class="copyright">
        <p>Copyright &copy; Designed & Developed by <a href="https://themeforest.net/user/quixlab">Quixlab</a> 2018</p>
    </div>
</div>
<!--**********************************
    Footer end
***********************************-->
</div>
