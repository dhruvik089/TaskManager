@model TaskManagement.Models.ViewModel.TaskModel

<!--*******************
    Preloader start
********************-->
<div id="preloader">
    <div class="loader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
        </svg>
    </div>
</div>
<!--*******************
    Preloader end
********************-->
<!--**********************************
    Main wrapper start
***********************************-->
<div id="main-wrapper">

    <!--**********************************
        Nav header start
    ***********************************-->
    <div class="nav-header">
        <div class="brand-logo">
            <a href="index.html">
                <b class="logo-abbr"><img src="images/logo.png" alt=""> </b>
                <div class="brand-title" />
                <img src="~/Content/Theme/TeacherDashBoard/images/logo-text.png" />
        </div>
        </a>
    </div>
</div>
<!--**********************************
    Nav header end
***********************************-->
<!--**********************************
    Header start
***********************************-->
<div class="header">
    <div class="header-content clearfix">

        <div class="nav-control">
            <div class="hamburger">
                <span class="toggle-icon"><i class="icon-menu"></i></span>
            </div>
        </div>

        <div class="header-right">

            <div class="d-flex">
                <h4 class="mt-3">
                    @Session["Teachername"]

                </h4>
                <button class="btn">

                    @Html.ActionLink("Log Out", "Login", controllerName: "LoginSignup")
                </button>
            </div>

        </div>
    </div>
</div>
<!--**********************************
    Header end ti-comment-alt
***********************************-->
<!--**********************************
    Sidebar start
***********************************-->
<div class="nk-sidebar">
    <div class="nk-nav-scroll">
        <ul class="metismenu" id="menu">
            <li class="nav-label">Dashboard</li>
            <li>
                <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                    <i class="icon-speedometer menu-icon"></i><span class="nav-text">Task</span>
                </a>
                <ul aria-expanded="false">
                    <li>@Html.ActionLink("Create Task", "CreateTask")</li>
                    @*<li>@Html.ActionLink("Assign Task", "AsignTask")</li>*@
                    <!-- <li><a href="./index-2.html">Home 2</a></li> -->
                </ul>
            </li>
        </ul>
    </div>
</div>
<!--**********************************
    Sidebar end
***********************************-->

<div class="content-body">
    <div class="container">
        <h2 class="text-center text-success">Add Task</h2>
        <div class="card mx-auto" style="width:80%">
            <div class="card-body">
                @using (Html.BeginForm(FormMethod.Post))
                {

                    <input type="text" name="CreatorID" value="@ViewBag.teacherId" hidden />
                    <div class="row mb-3">
                        <div class="col-lg-12">
                            @Html.LabelFor(m => m.TaskName)
                            @Html.TextBoxFor(m => m.TaskName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.TaskName, "", htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-lg-12">
                            @Html.LabelFor(m => m.Deadline)
                            <input type="date" name="Deadline" class="form-control deadline" />
                            @Html.ValidationMessageFor(m => m.Deadline, "", htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-lg-12">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Description, "", htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>


                    <input type="submit" name="submit" class="btn btn-outline-success" />}

                @Html.ActionLink("Back To Home", "Teacher", "Teacher", htmlAttributes: new { @class = "text-decoration-none btn btn-info mt-5" })
            </div>
        </div>

    </div>
</div>
<!--**********************************
      Footer start
  ***********************************-->
<div class="footer">
    <div class="copyright">
        <p>Copyright &copy; Designed & Developed by <a href="https://themeforest.net/user/quixlab">Quixlab</a> 2018</p>
    </div>
</div>
<!--**********************************
    Footer end
***********************************-->
</div>


<script>$('.deadline').prop('min', new Date().toLocaleDateString('en-CA'));</script>